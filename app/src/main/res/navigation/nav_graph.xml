<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/watchlistFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.WatchlistFragment"
        android:label="Watchlist"
        tools:layout="@layout/fragment_watchlist" />
    <fragment
        android:id="@+id/watchedFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.WatchedFragment"
        android:label="Watched"
        tools:layout="@layout/fragment_watched" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_librariesFragment"
            app:destination="@id/librariesFragment" />
        <action
            android:id="@+id/action_aboutFragment_to_coffeeFragment"
            app:destination="@id/coffeeFragment" />
    </fragment>
    <fragment
        android:id="@+id/librariesFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.LibrariesFragment"
        android:label="fragment_libraries"
        tools:layout="@layout/fragment_libraries" />
    <fragment
        android:id="@+id/coffeeFragment"
        android:name="com.dharringtondev.moviewatchlist.ui.CoffeeFragment"
        android:label="fragment_coffee"
        tools:layout="@layout/fragment_coffee" />
</navigation>